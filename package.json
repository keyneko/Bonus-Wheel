{
  "name": "riot-startkit",
  "version": "1.0.0",
  "description": "A Riot - PostCSS - Webpack startkit from wbkd.io",
  "main": "webpack.config.js",
  "scripts": {
    "build": "cp ./src/index.html ./build/index.html & NODE_ENV=production webpack -p --progress --config webpack.config.js",
    "dev": "cp ./src/index.html ./build/index.html & webpack-dev-server --devtool eval --hot"
  },
  "author": "webkid.io",
  "license": "MIT",
  "dependencies": {
    "normalize.css": "^3.0.3",
    "riot": "^2.1.0",
    "riot-route": "^2.3.0-beta.3",
    "riotcontrol": "0.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wbkd/riotjs-startkit.git"
  },
  "devDependencies": {
    "babel": "^5.4.7",
    "babel-core": "^5.4.7",
    "babel-loader": "^5.1.3",
    "node-sass": "^3.3.3",
    "riotjs-loader": "^1.1.3",
    "sass-loader": "^3.0.0",
    "style-loader": "^0.12.3",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.9.0"
  }
}
